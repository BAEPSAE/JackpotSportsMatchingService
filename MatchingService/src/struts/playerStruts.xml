<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <constant name="struts.enable.DynamicMethodInvocation" value="false" />
    <constant name="struts.devMode" value="true" />
    <constant name="struts.mulipart.maxSize" value="104859600" />

    <package name="player" namespace="/player" extends="default">
		<!-- 전적보기 화면 -->
    	<action name="mypagev" class="action.PlayerAction" method="mypagev">
			<result>../mypagev.jsp</result>
		</action>
		
		<!-- 회원가입 뷰 -->
		<action name="joinv">
			<result>/joinv.jsp</result>
		</action>
		
		<!-- 회원가입 디비에 넣기 -->
		<action name="join" class="action.PlayerAction" method="join">
			<interceptor-ref name="fileUpload"></interceptor-ref>
			<interceptor-ref name="params" />
			<result type="redirect">loginv.action</result>
		</action>
		
		<!-- 로그인 뷰 -->
		<action name="loginv">
			<result>/login.jsp</result>
		</action>
		
		<!-- 로그인 하기 -->
		<action name="login" class="action.PlayerAction" method="login">
			<result name="success">/index.jsp</result>
			<result name="input">/login.jsp</result>
		</action>
		
		<!-- 로그아웃 -->
		<action name="logout" class="action.PlayerAction" method="logout">
			<result name="success">/index.jsp</result>
		</action>
		
		<action name="Matching">
			<result>/Matching.jsp</result>
		</action>
		
		<action name="schedule" class="action.PlayerAction" method="getScheduler">
			<result type="json"></result>
		</action>
		<action name="schedulelist" class="action.PlayerAction" method="getScheduler">
			<result type="json"></result>
		</action>
    </package>
</struts>
